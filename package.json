{
  "name": "power-metal-stack-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "./dist/worker.js",
  "scripts": {
    "clean": "rimraf .cache .mf build dist",
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:worker": "cross-env NODE_ENV=production node ./scripts/build.js",
    "dev": "npm run build:remix && run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "dev:worker": "cross-env NODE_ENV=development miniflare --build-command \"node ./scripts/build.js\" --watch --debug --global-async-io --global-timers --global-random",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "deploy": "wrangler publish",
    "postinstall": "remix setup cloudflare",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma migrate dev && prisma db seed",
    "start": "miniflare",
    "start:mocks": "binode --require ./mocks -- miniflare",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "prepare": "husky install"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 120
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "@remix-run/react": "*",
    "@remix-run/cloudflare": "*",
    "bcryptjs": "^2.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "*",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.11",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^6.0.0",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.1",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@vitejs/plugin-react": "^1.2.0",
    "binode": "^1.0.5",
    "c8": "^7.11.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.2",
    "esbuild": "^0.14.27",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-functional": "^4.2.0",
    "happy-dom": "^2.50.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "miniflare": "^2.3.0",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^3.11.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.2",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.7.10"
  },
  "engines": {
    "node": ">=16.14.0 || >=17.8.0",
    "npm": ">=8.5.0",
    "yarn": "please-use-npm"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix",
    "*.{js,ts,jsx,tsx,css,md}": "prettier --write"
  }
}
